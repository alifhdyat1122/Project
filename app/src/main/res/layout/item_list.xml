<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_list_cv"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/item_list_image"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <TextView
                android:id="@+id/item_list_title"
                android:textColor="#262626"
                android:layout_below="@id/item_list_image"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:text="Brochure"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_list_desc"
                android:layout_below="@id/item_list_title"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:maxLines="3"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:text="Description"
                android:layout_width="wrap_content"
                android:layout_height="60dp" />
            <Button
                android:id="@+id/share"
                android:layout_below="@+id/item_list_desc"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Share"
                android:layout_marginLeft="17dp"/>
            <Button
                android:id="@+id/fav"
                android:layout_below="@id/item_list_desc"
                android:layout_toRightOf="@+id/share"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Favorite"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>


</androidx.cardview.widget.CardView>